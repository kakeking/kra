<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/df_bg"
    tools:context=".DfStep1Fragment">

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:weightSum="3"
        android:layout_margin="@dimen/df_bottom_margin">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/first_fragment_title"
        android:layout_weight="1"
        android:textColor="@color/colorMain"
        android:textSize="@dimen/df_text_size"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/df_step1_text_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/first_fragment_text"
            android:textColor="@color/colorMain"
            android:textSize="@dimen/df_text_size_small"
            android:layout_marginRight="@dimen/df_recycler_margin"
            android:layout_gravity="center"/>
        <ImageButton
            android:id="@+id/btn_df_date"
            android:layout_width="@dimen/df_icon_size"
            android:layout_height="@dimen/df_icon_size"
            android:background="@mipmap/ic_date"
            android:layout_gravity="center"/>
    </LinearLayout>
</LinearLayout>
    <ImageButton
        android:id="@+id/speaker_df_step1"
        android:layout_width="@dimen/df_speaker_size"
        android:layout_height="@dimen/df_speaker_size"
        android:src="@mipmap/speaker"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_marginBottom="@dimen/df_speaker_margin"
        android:layout_marginRight="@dimen/df_speaker_margin"
        android:background="@drawable/round_button"
        android:layout_gravity="bottom|right"/>
</FrameLayout>