<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    app:cardCornerRadius="2dp"
    app:cardElevation="0dp"
    android:layout_margin="1dp"
    app:cardBackgroundColor="@color/colorMain"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content">
    <com.balysv.materialripple.MaterialRippleLayout
        style="@style/RippleStyleWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/lyt_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_df_card"
            android:clickable="true"
            android:orientation="horizontal"
            android:paddingTop="@dimen/df_card_padding"
            android:paddingBottom="@dimen/df_card_padding">

            <View
                android:layout_width="@dimen/spacing_large"
                android:layout_height="0dp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/lyt_checked"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="@dimen/item_width"
                        android:layout_height="@dimen/item_width"
                        android:src="@drawable/df_shape_circle"
                        android:tint="@color/colorAccent" />

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerInParent="true"
                        app:srcCompat="@drawable/ic_done" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/lyt_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/image"
                        android:layout_width="@dimen/item_width"
                        android:layout_height="@dimen/item_width"
                        app:civ_border_width="0dp" />
                </RelativeLayout>

            </RelativeLayout>

        <View
            android:layout_width="18dp"
            android:layout_height="0dp" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/df_card_padding"
                    android:text="variety 1"
                    android:textSize="@dimen/df_text_size_small"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="@dimen/spacing_large"
            android:layout_height="0dp" />
    </LinearLayout>

    </com.balysv.materialripple.MaterialRippleLayout>
</androidx.cardview.widget.CardView>