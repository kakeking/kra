<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:datePickerDialogTheme">@style/MyDatePickerDialogTheme</item>
    </style>
<!--    Disease forecast step 1 Date picker custom style  -->
    <style name="MyDatePickerDialogTheme" parent="android:Theme.Material.Light.Dialog">
        <item name="android:datePickerStyle">@style/MyDatePickerStyle</item>
        <item name="android:buttonBarButtonStyle">@style/DatePickerTheme.ButtonBarButtonStyle</item>
    </style>
    <style name="MyDatePickerStyle" parent="@android:style/Widget.Material.Light.DatePicker">
        <item name="android:headerBackground">@color/colorMain</item>
        <item name="android:colorButtonNormal">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/df_text_size_small</item>
    </style>
    <style name="DatePickerTheme.ButtonBarButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorMain</item>
    </style>
<!--    Disease forecast step 3&4 ripple on click  -->
    <style name="RippleStyleWhite">
        <item name="mrl_rippleOverlay">true</item>
        <item name="mrl_rippleColor">@color/colorTextPrimary</item>
        <item name="mrl_rippleHover">true</item>
        <item name="mrl_rippleAlpha">0.5</item>
    </style>
<!--    custom dialog style for terms&conditions on register-->
    <style name="MyDialog" parent="android:style/Theme.Dialog">

        <item name="android:windowBackground">#454A48</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:button">@style/MyButton</item>
    </style>
    <!--Button for custom dialog-->
    <style name="MyButton" parent="AppTheme">
        <item name="android:background">#DCDCDC</item>
    </style>
<!--    style for progress dialog-->
    <style name="AppCompatAlertDialogStyle" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorMain</item>
        <item name="android:background">@color/colorTextPrimary</item>
    </style>

</resources>
